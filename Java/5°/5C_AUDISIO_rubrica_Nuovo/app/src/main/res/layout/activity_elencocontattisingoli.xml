<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="238dp"
        android:layout_height="0dp"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toTopOf="@+id/txtNomeSingolo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtNomeSingolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:text="@string/nomeContatto"
        app:layout_constraintBottom_toTopOf="@+id/txtCognomeSingolo"
        app:layout_constraintStart_toStartOf="@+id/txtCognomeSingolo"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/txtCognomeSingolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="50dp"
        android:text="@string/cognomeContatto"
        app:layout_constraintBottom_toTopOf="@+id/txtNumeroSingolo"
        app:layout_constraintStart_toStartOf="@+id/txtNumeroSingolo"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeSingolo" />

    <TextView
        android:id="@+id/txtNumeroSingolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="269dp"
        android:text="@string/numeroContatto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCognomeSingolo" />
</androidx.constraintlayout.widget.ConstraintLayout>