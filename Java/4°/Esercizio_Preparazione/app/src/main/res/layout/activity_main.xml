<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etxNome"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/Nome"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="39dp" />

    <EditText
        android:id="@+id/etxCogome"
        android:layout_width="173dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/Cognome"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="39dp" />

    <RadioGroup
        android:id="@+id/Sesso"
        android:layout_width="343dp"
        android:layout_height="54dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="117dp">

        <RadioButton
            android:id="@+id/rbMaschio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/rbMaschio" />

        <RadioButton
            android:id="@+id/rbFemmina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/rbFemmina" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="LIngue parlate"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="196dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sesso"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="96dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cognome"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="20dp" />

    <CheckBox
        android:id="@+id/cbxItaliano"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:text="@string/cbxItaliano"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="212dp" />

    <CheckBox
        android:id="@+id/cbxInglese"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:text="@string/cbxInglese"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="244dp" />

    <CheckBox
        android:id="@+id/cbxFrancese"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:text="@string/cbxFrancese"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="276dp" />

    <CheckBox
        android:id="@+id/cbxSpagnolo"
        android:layout_width="94dp"
        android:layout_height="31dp"
        android:text="@string/cbxSpagnolo"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="311dp" />

    <CheckBox
        android:id="@+id/cbxTedesco"
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:text="@string/cbxTedesco"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="342dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="424dp" />
</android.support.constraint.ConstraintLayout>